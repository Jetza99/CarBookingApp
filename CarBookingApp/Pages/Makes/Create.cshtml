@page
@model CarBookingApp.Pages.Makes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Make</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Make.Name" class="form-control" id="floatingInputValue" placeholder="e.g Yamaha">
                <label asp-for="Make.Name" for="floatingInputValue">Make Name</label>
                <span asp-validation-for="Make.Name" class="text-danger"></span>
            </div>
            <partial name="_CreateButtonsPartial" />
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
