@page
@model CarBookingApp.Pages.Makes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<Partial name="_IndexCreateButtonPartial" />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Make[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Make) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>

                    @await Html.PartialAsync("_IndexButtonsPartial", item.Id)


                </td>
        </tr>
}
    </tbody>
</table>

<partial name="_IndexDeleteFormPartial" />
@section Scripts{
    <script src="~/js/IndexDeleteButtonScript.js"></script>
}
