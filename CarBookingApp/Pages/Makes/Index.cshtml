@page
@model CarBookingApp.Pages.Makes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Make[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Make) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>

                    <a class="btn btn-warning" asp-page="./Edit" asp-route-id="@item.Id">
                        Edit
                        <i class="fa fa-edit" area-hidden="true"></i>
                    </a>
                    <a class="btn btn-info" asp-page="./Details" asp-route-id="@item.Id">
                        Details
                        <i class="fa fa-info"></i>
                    </a>
                    <button class="btn btn-danger deleteBtn" data-id="@item.Id">
                        Delete
                        <i class="fa-solid fa-trash-can"></i>
                    </button>

                </td>
        </tr>
}
    </tbody>
</table>

<form id="deleteForm" asp-page-handler="delete" method="post">
    <input type="hidden" name="makeid" id="makeid" />
</form>

@section Scripts{
    <script>
        $(function () {
            $('.deleteBtn').click(function (e) {
                swal("Are you sure you want to do this?", {
                    buttons: ["No", true],
                    icon: "warning",
                    dangerMode: true
                }).then((confirm) => {
                    if(confirm){
                        var btn = $(this);
                        var id = btn.data("id");
                        $('#makeid').val(id);
                        $('#deleteForm').submit();
                    }
                });
            });
        });
 </script>
 }
